#!/bin/bash

set -x
mkdir t
cd t
hg init
hg id
echo a > a
hg add a
hg commit -t "test" -u test -d "0 0"
hg co
hg identify
T=`hg -q tip | cut -d : -f 2`
echo "$T first" > .hgtags
cat .hgtags
hg add .hgtags
hg commit -t "add tags" -u test -d "0 0"
hg tags
hg identify
echo bb > a
hg status
hg identify
hg co first
hg id
hg -v id
hg status
echo 1 > b
hg add b
hg commit -t "branch" -u test -d "0 0"
hg id
hg co -m 1
hg id
hg status


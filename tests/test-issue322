#!/bin/sh
# http://www.selenic.com/mercurial/bts/issue322

hg init a
cd a       
echo a > a 
hg commit -Ama 
rm a       
mkdir a    
echo a > a/a

echo % should fail - will corrupt dirstate
hg add a/a
hg commit -mb

echo % should fail - manifest is corrupt
hg verify
cd ..      

hg --debug --traceback clone a b
